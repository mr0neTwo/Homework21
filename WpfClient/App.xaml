<Application x:Class="WpfClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:WpfClient.ViewModels"
             xmlns:view="clr-namespace:WpfClient.Views"
            >
    <Application.Resources>
        
        <DataTemplate DataType="{x:Type TypeName=viewModel:ListViewModel }">
            <view:ListPage/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type TypeName=viewModel:NoteFormViewModel }">
            <view:NoteFormPage/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type TypeName=viewModel:LoginViewModel }">
            <view:LoginPage/>
        </DataTemplate>
        
    </Application.Resources>
</Application>
