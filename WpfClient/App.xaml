<Application x:Class="WpfClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:WpfClient.ViewModels"
             xmlns:view="clr-namespace:WpfClient.Views"
            >
    <Application.Resources>
        
        <DataTemplate DataType="{x:Type TypeName=viewModel:NotesViewModel }">
            <view:NotesPage/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type TypeName=viewModel:NoteFormViewModel }">
            <view:NoteFormPage/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type TypeName=viewModel:LoginViewModel }">
            <view:LoginPage/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type TypeName=viewModel:SignUpViewModel }">
            <view:SignUpPage/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type TypeName=viewModel:UsersViewModel }">
            <view:UsersPage/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type TypeName=viewModel:UserFormViewModel }">
            <view:UserFormPage/>
        </DataTemplate>
        
    </Application.Resources>
</Application>
